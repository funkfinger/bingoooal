---
import { supabase } from '../lib/supabase';

// If already logged in, redirect to dashboard (handled by middleware)
const errorParam = Astro.url.searchParams.get('error');
const errorMessage = errorParam ? decodeURIComponent(errorParam) : null;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Login - Bingoooal</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
      }

      .login-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        padding: 48px;
        max-width: 400px;
        width: 100%;
        text-align: center;
      }

      h1 {
        color: #333;
        margin-bottom: 12px;
        font-size: 32px;
      }

      .subtitle {
        color: #666;
        margin-bottom: 32px;
        font-size: 16px;
      }

      .google-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        width: 100%;
        padding: 14px 24px;
        background: white;
        border: 2px solid #ddd;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 500;
        color: #333;
        cursor: pointer;
        transition: all 0.2s;
      }

      .google-btn:hover {
        background: #f8f9fa;
        border-color: #667eea;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.2);
      }

      .google-btn:active {
        transform: translateY(0);
      }

      .google-icon {
        width: 20px;
        height: 20px;
      }

      .logo {
        font-size: 48px;
        margin-bottom: 16px;
      }

      .error {
        background: #fee;
        color: #c33;
        padding: 12px;
        border-radius: 8px;
        margin-bottom: 20px;
        display: none;
      }

      .error.show {
        display: block;
      }
    </style>
  </head>
  <body>
    <div class="login-container">
      <div class="logo">ðŸŽ¯</div>
      <h1>Welcome to Bingoooal</h1>
      <p class="subtitle">Track your yearly goals in bingo format</p>

      <div id="error" class="error" class:list={{ show: errorMessage }}>
        {errorMessage || ''}
      </div>

      <button id="google-login" class="google-btn">
        <svg class="google-icon" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        Continue with Google
      </button>
    </div>

    <script>
      import { supabase } from '../lib/supabase';

      const googleBtn = document.getElementById('google-login');
      const errorDiv = document.getElementById('error');

      googleBtn?.addEventListener('click', async () => {
        try {
          const { data, error } = await supabase.auth.signInWithOAuth({
            provider: 'google',
            options: {
              redirectTo: `${window.location.origin}/auth/callback`,
            },
          });

          if (error) {
            errorDiv.textContent = error.message;
            errorDiv.classList.add('show');
          }
        } catch (err) {
          errorDiv.textContent = 'An unexpected error occurred';
          errorDiv.classList.add('show');
          console.error(err);
        }
      });
    </script>
  </body>
</html>

